<h1>New Game</h1>

<ul>
  <%@letters.each do |letter| %>
      <li> <%= letter%> </li>
    <% end %>
</ul>

<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

<form action="/score">
<input id="letters" name="letters" type="hidden" value="<%=@letters%>"/>
  <input type="text" name="score">
  <input type="submit" value="Ask!">
</form>
